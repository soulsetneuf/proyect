<div class="row">
  <div class="col-md-5">
    <div id="cart" <%= style="display:none" if  @cart.line_items.empty? %> >
      <%= render @cart %>

    </div>

  </div>

  <div class="col-md-7">
    <h2>Insumos Reactivoss</h2>
    <% @insumo_reactivos = InsumoReactivo.order_name_tipo %>
    <table class="table table-striped table-hover table-condensed ">

      <thead>
      <tr>
        <th>Agregar</th>
        <th>Tipo</th>
        <th>Nombre</th>
        <th>Unidad</th>
        <th>Cantidad</th>
      </tr>
      </thead>

      <tbody>
      <% @insumo_reactivos.each do |insumo_reactivo| %>
          <% if insumo_reactivo.nombre != "Todos" %>
              <tr>
                  <td>
                      <%= button_to line_items_path(insumo_reactivo_id: insumo_reactivo), {remote: true, class: "btn btn-default"} do %>
                          <i class="glyphicon glyphicon-chevron-left"></i> AÃ±adir
                      <% end %>
                  </td>
                  <td>
                       <%= insumo_reactivo.tipo %>
                  </td>
                  <td>
                       <%= insumo_reactivo.nombre %>
                  </td>
                  <td>
                       <%= insumo_reactivo.unidad_medida %>      
                  </td>
                  <td class="text-right">
                       <%= insumo_reactivo.cantidad %>
                  </td>
              </tr>
          <% end %>  
      <% end %>
      </tbody>
    </table>
  </div>
</div>
