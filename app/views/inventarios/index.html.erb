<h1>Registro de Inventarios</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Insumo reactivo</th>
      <th>Laboratorio</th>
      <th>Hospital</th>
      <th>Nombre</th>
      <th>Stock</th>
      <th>Detalle</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventarios.each do |inventario| %>
      <tr>
        <td><%= inventario.insumo_reactivo %></td>
        <td><%= inventario.form_laboratorio %></td>
        <td><%= inventario.hospital %></td>
        <td><%= inventario.nombre %></td>
        <td><%= inventario.stock %></td>
        <td><%= inventario.detalle %></td>
        <td><%= inventario.tipo %></td>
        <td><%= link_to 'Ver', inventario %></td>
        <td><%= link_to 'Editar', edit_inventario_path(inventario) %></td>
        <td><%= link_to 'Eliminar', inventario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Inventario', new_inventario_path, :class=> "btn" %>
