<%= simple_form_for(@laboratorio) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :persona, :collection => Persona.order(:nombre), :label_method => lambda { |persona| "#{persona.nombre} #{persona.apellido_paterno} #{persona.apellido_materno}" }, :prompt => 'Choose a person', :label => "Encargado"%>

    <%= f.input :nombre, :label => "Nombre"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
