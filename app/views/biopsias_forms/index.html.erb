<h1>Biopsias</h1>

<table class="table table-striped table-hover" id="tabla">
  <thead>
    <tr>
      <th>Paciente</th>
      <th>Hospital</th>
      <th>Servicio</th>
      <th>Medico solicitante</th>
      <th>Diagnostico clinico</th>
      <th>Datos anatomicos</th>
      <th>Datos importantes</th>
      <th>Macroscopico</th>
      <th>Microscopico</th>
      <th>Diagnostico</th>
      <th>Dr</th>
      <th>Patologo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @biopsias_forms.each do |biopsias_form| %>
      <tr>
        <td><%= biopsias_form.paciente.nombres %></td>
        <td><%= biopsias_form.hospital %></td>
        <td><%= biopsias_form.servicio %></td>
        <td><%= biopsias_form.medico_solicitante %></td>
        <td><%= biopsias_form.diag_clinico %></td>
        <td><%= biopsias_form.datos_anatom %></td>
        <td><%= biopsias_form.datos_import %></td>
        <td><%= biopsias_form.macroscopico %></td>
        <td><%= biopsias_form.microscopico %></td>
        <td><%= biopsias_form.diagnostico %></td>
        <td><%= biopsias_form.dr %></td>
        <td><%= biopsias_form.patologo %></td>
        <td><%= link_to 'Ver', biopsias_form %></td>
        <td><%= link_to 'Editar', edit_biopsias_form_path(biopsias_form) %></td>
        <td><%= link_to 'Eliminar', biopsias_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <%= link_to '<i class="glyphicon glyphicon-list-alt"></i>'.html_safe, {:format => "pdf", :controller => "biopsias_forms", action: "show", :id => biopsias_form}, :"data-toggle" => "tooltip", :"data-placement" => "bottom", :title => "Crear  Informe", :target => "_blank" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Biopsias', new_biopsias_form_path, :class=> "btn" %>
