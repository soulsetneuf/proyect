
<%= simple_form_for(@baciloscopia_form) do |f| %>
  <%= f.error_notification %>

    <div class="form-inputs">
      <div class="panel panel-default">
        <div class="panel-body">

          <div class="col-xs-6">
          <%= f.association :paciente,label_method: :nombres %></div>
          <div class="col-xs-6">
          <%= f.association :hospital, label_method: :nombre, :as => :collection_select, collection: Hospital.where("nombre<>'Todos'"), :label => "Hospital" %>
          </div>
        </div>
      </div>
    </div>

    <div class="form-inputs">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-sm-4">


               <% fecha=Time.now %>

                    <div class="input-group">
                    <b>Fecha</b>
                      <input class="form-control hasDatepicker" id="paciente_fecha_nacimiento" name="baciloscopia_form[fecha]" type="date" max='<%= fecha.strftime("%Y") + "-" + fecha.strftime("%m") + "-" + fecha.strftime("%d") %>' min="1866-01-01"
                      value='<%= fecha.strftime("%Y") + "-" + fecha.strftime("%m") + "-" + fecha.strftime("%d") %>' >
                      <div class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                      </div>
                    </div>



              <%#= f.input :fecha %>
              <!--
              <%= f.input :fecha do %>
                  <div class="input-group">
                    <%= f.text_field :fecha, :class => 'form-control' %>
                    <div class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                    </div>
                  </div>
              <% end %>
              -->

            </div>
            <div class="col-sm-4">
              <%= f.input :tipo_muestra %>
            </div>
            <div class="col-sm-4">
              <%= f.input :razon_solicitud %>
            </div>
            <div class="col-sm-4">
              <%= f.input :l_j %>
            </div>
            <div class="col-sm-4">
              <%= f.input :s_t %>
            </div>
            <div class="col-sm-4">

                  <div class="input-group">
                    <b>Periodo</b>
                      <input class="form-control hasDatepicker" id="paciente_fecha_nacimiento" name="baciloscopia_form[periodo]" type="date" max='<%= fecha.strftime("%Y") + "-" + fecha.strftime("%m") + "-" + fecha.strftime("%d") %>' min="1866-01-01"
                      value='<%= fecha.strftime("%Y") + "-" + fecha.strftime("%m") + "-" + fecha.strftime("%d") %>'>
                      <div class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                      </div>
                  </div>
              <!--
              <%= f.input :periodo do %>
              <div class="input-group">
                <%= f.text_field :periodo, :class => 'form-control' %>
                <div class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                </div>
              </div>
              <% end %>
              -->

            </div>

   </div>
   </div>
   </div>
   </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


<script>
    var ready;

    ready = function() {
        $("#baciloscopia_form_fecha, #baciloscopia_form_periodo").datepicker({
            yearRange: "-100:+0",
            changeMonth: true,
            changeYear: true
        });
        $('[data-toggle="tooltip"]').tooltip();
        $('[data-toggle="popover"]').popover();
    };

    $(document).ready(ready);
    $(document).on('page:load', ready);
</script>
