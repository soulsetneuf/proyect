<h1>Baciloscopias</h1>

<table class="table table-striped table-hover" id="tabla">
  <thead>
    <tr>
      <th>Paciente</th>
      <th>Hospital</th>
      <th>Fecha</th>
      <th>Tipo muestra</th>
      <th>Razon solicitud</th>
      <th>L j</th>
      <th>S t</th>
      <th>Periodo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @baciloscopia_forms.each do |baciloscopia_form| %>
      <tr>
        <td><%= baciloscopia_form.paciente.nombres %></td>
        <td><%= baciloscopia_form.hospital %></td>
        <td><%= baciloscopia_form.fecha %></td>
        <td><%= baciloscopia_form.tipo_muestra %></td>
        <td><%= baciloscopia_form.razon_solicitud %></td>
        <td><%= baciloscopia_form.l_j %></td>
        <td><%= baciloscopia_form.s_t %></td>
        <td><%= baciloscopia_form.periodo %></td>
        <td><%= link_to 'Ver', baciloscopia_form %></td>
        <td><%= link_to 'Editar', edit_baciloscopia_form_path(baciloscopia_form) %></td>
        <td><%= link_to 'Eliminar', baciloscopia_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <%= link_to '<i class="glyphicon glyphicon-list-alt"></i>'.html_safe, {:format => "pdf", :controller => "baciloscopia_forms", action: "show", :id => baciloscopia_form}, :"data-toggle" => "tooltip", :"data-placement" => "bottom", :title => "Crear  Informe", :target => "_blank" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Baciloscopia ', new_baciloscopia_form_path, :class=> "btn" %>
  <a href="javascript:location.reload()">Mostrar historial de registro </a>
<div id="chart-container"></div>
<script type="text/javascript">
  FusionCharts.ready(grafico_columna("chart-container","Historial de registro del ultimo a√±o Baciloscopia","Meses","Cantidad de pacientes registrados",gon.reporte_mensual_baciloscopia));
</script>