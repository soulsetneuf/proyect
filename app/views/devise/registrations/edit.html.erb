<div class="container col-md-6 col-md-offset-3 ">
  <div class="panel panel-default">
    <div class="panel-heading text-center">Editar Cuenta</div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :ci %>
            <%= f.input :email, required: true, autofocus: true %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Actualmente la espera de confirmación para: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password, autocomplete: "off", hint: "dejarlo en blanco si no quiere cambiarla", required: false %>
            <%= f.input :password_confirmation, required: false %>
            <%= f.input :current_password, hint: "necesitamos su contraseña actual para confirmar los cambios", required: true %>
            <%= f.input :rol_id, :html_input => {:value => '1'} %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Actualizar" %>
          </div>
      <% end %>

      <h3>Cancelar mi cuenta</h3>

      <p>No esta
        feliz? <%= link_to "Cancelar mi cuenta", registration_path(resource_name), data: {confirm: "esta seguro?"}, method: :delete %></p>

    </div>
  </div>
</div>