<h1>Cultivos</h1>

<table class="table table-striped table-hover" id="tabla">
  <thead>
    <tr>
      <th>Paciente</th>
      <th>Hospital</th>
      <th>Fecha</th>
      <th>Tipo muestra</th>
      <th>Medico</th>
      <th>Periodo</th>
      <th>Observaciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @form_cultivos.each do |form_cultivo| %>
      <tr>
        <td><%= form_cultivo.paciente.nombres %></td>
        <td><%= form_cultivo.hospital %></td>
        <td><%= form_cultivo.fecha %></td>
        <td><%= form_cultivo.tipo_muestra %></td>
        <td><%= form_cultivo.medico %></td>
        <td><%= form_cultivo.periodo %></td>
        <td><%= form_cultivo.observaciones %></td>
        <td><%= link_to 'Ver', form_cultivo %></td>
        <td><%= link_to 'Editar', edit_form_cultivo_path(form_cultivo) %></td>
        <td><%= link_to 'Eliminar', form_cultivo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <%= link_to '<i class="glyphicon glyphicon-list-alt"></i>'.html_safe, {:format => "pdf", :controller => "form_cultivos", action: "show", :id => form_cultivo}, :"data-toggle" => "tooltip", :"data-placement" => "bottom", :title => "Crear  Informe", :target => "_blank" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Cultivo', new_form_cultivo_path, :class=> "btn" %>

<a href="javascript:location.reload()">Mostrar historial de registro</a>

